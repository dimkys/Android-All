<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dimkysik.multi2.ListActivity"
    tools:background="@color/Red">

        <Button
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAbout"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/buttonExit"
            android:layout_alignStart="@+id/buttonExit"
            android:onClick="onClickButtom"
            />

        <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonExit"
            android:layout_below="@+id/buttonAbout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:onClick="onClickButtom"
            />

        <Button
            android:text="Staruem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonStaruem"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/buttonAbout"
            android:layout_alignStart="@+id/buttonAbout"
            android:onClick="onClickButtom"
          />

        <Button
            android:text="Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSetting"
            android:onClick="onClickButtom"
            android:layout_above="@+id/buttonAbout"
            android:layout_alignRight="@+id/buttonStaruem"
            android:layout_alignEnd="@+id/buttonStaruem"
            android:layout_marginBottom="36dp" />
</RelativeLayout>
